# OpenAI API Key
# Replace with your actual OpenAI API key - the current test key won't work
OPENAI_API_KEY=sk-test123456789
OPENAI_MODEL=gpt-4

# Ollama Configuration (Optional, for local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=ollama/deepseek-r1:8b

# AWS Bedrock Configuration (Optional, for AWS Bedrock)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_DEFAULT_REGION=us-west-2
BEDROCK_MODEL=deepseek.r1-v1:0

# LLM Configuration
# Options: openai, ollama, bedrock, anthropic
LLM_PROVIDER=ollama
TEMPERATURE=0.2

# Loki Configuration
LOKI_URL=http://localhost:3100

# Slack Configuration
SLACK_APP_TOKEN=xapp-1-test
SLACK_BOT_TOKEN=xoxb-test

# Debugging settings
LOG_LEVEL=INFO
LOG_FORMAT=json

# Application Configuration
DEBUG_MODE=true
MAX_RETRIES=3
TIMEOUT_SECONDS=30

# Logging Configuration
LOG_SOURCE=service_logs

# Context Storage
CONTEXT_STORAGE_DIR=data/contexts
CONTEXT_CACHE_ENABLED=true

# JIRA Configuration
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_EMAIL=test@example.com
JIRA_API_TOKEN=your_api_token

# Debugging Configuration
VERBOSE_LOGGING=true 